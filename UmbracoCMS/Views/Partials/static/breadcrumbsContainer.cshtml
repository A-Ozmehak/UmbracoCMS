@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Routing
@using Umbraco.Extensions

@inject IPublishedUrlProvider PublishedUrlProvider

@{ 
    var selection = Model.Ancestors().ToArray(); 
    var homePageDisplayName = "Home";
    var isFirstItem = true;
}

<section id="title-section">
    <div class="background">
        <img class="left-background-img" src="/img/aboutBackground2.svg" alt="background">
        <img class="right-background-img" src="/img/aboutBackground1.svg" alt="background">
    </div>

    <div class="container">
        <h1>@ViewBag.Title</h1>

        @if (selection?.Length > 0)
        {
            <ul class="breadcrumb">
            @foreach (var item in selection.OrderBy(x => x.Level))
            {
                var displayName = isFirstItem ? homePageDisplayName : item.Name;
                <li><a href="@item.Url(PublishedUrlProvider)">@displayName</a><i class="fa-regular fa-angle-right"></i></li>
                isFirstItem = false;
            }
                <span class="active">@Model.Name</span>
            </ul>
        }
    </div>
</section>

